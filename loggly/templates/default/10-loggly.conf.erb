<% if ::EasyBib.get_instance_roles(node).include?('nginxphpapp') %>

$ModLoad imfile
<%
node[:syslog][:logfiles].each do|fileName,logSeverity|
%>
  $InputFileName <%= fileName %>
  $InputFileTag <%= File.basename(fileName, '.log') %>
  $InputFileStateFile stat-<%= File.basename(fileName, '.log') %>
  $InputFileSeverity <%= logSeverity %>
  $InputRunFileMonitor
<%
end
%>

$InputFilePollingInterval <%= node[:syslog][:poll] %>

<% end %>

<%
if !::EasyBib.get_instance_roles(node).include?('loadbalancer')
    # on loadbalancer we write to local files
%>

# forward to loggly: https://easybib.loggly.com
$template LogglyFormat,"<\%pri%>%protocol-version% %timestamp:::date-rfc3339% %HOSTNAME% %app-name% %procid% %msgid% [<%= @logglydata %>] %msg%\n"

*.* @@logs-01.loggly.com:514; LogglyFormat

<% end %>
